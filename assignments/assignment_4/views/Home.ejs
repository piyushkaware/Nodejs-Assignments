<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home page</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link href="style.css" rel="stylesheet" />
  </head>
  <body>
    <header><h1>Assignment 4</h1></header>
    <div class="contain">
      <% if(users != null) (users.forEach(user => {%>
      <div class="alluser">
        <% if(user.isPromoted===null){%>
        <div class="detail" id="null">
          <p>Name : <%= user.name %></p>
          <p>Emai Id: <%= user.email %></p>
          
        </div>
        <div>
          <form method="POST" action="/users/<%= user._id %>/?_method=PUT">
            <button id="edit-<%= user.name %>" type="submit" class="btn btn-info">Promote/Demote</button>
          </form>
        </div>
        <br />
        <form method="POST" action="/users/<%= user._id %>/?_method=DELETE">
          <button id="delete-<%= user.name %>" type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
        <% }%><% if(user.isPromoted===true){%>
        <div class="detail" id="true">
          <p>Name : <%= user.name %></p>
          <p>Emai Id: <%= user.email %></p>
        </div>
        <div>
          <form method="POST" action="/users/<%= user._id %>/?_method=PUT">
            <button id="edit-<%= user.name %>" type="submit" class="btn btn-warning">Demote</button>
          </form>
        </div>
        <br />
        <form method="POST" action="/users/<%= user._id %>/?_method=DELETE">
          <button id="delete-<%= user.name %>" type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
        <%}%><% if(user.isPromoted===false){%>
        <div class="detail" id="false">
          <p>Name : <%= user.name %></p>
          <p>Emai Id: <%= user.email %></p>
        </div>
        <div>
          <form method="POST" action="/users/<%= user._id %>/?_method=PUT">
            <button id="edit-<%= user.name %>" type="submit" class="btn btn-success">Promote</button>
          </form>
        </div>
        <br />
        <form method="POST" action="/users/<%= user._id %>/?_method=DELETE">
          <button id="delete-<%= user.name %>" type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
        <%}}))%>
        <br><br/>
      <form class="formpage">
        <button type="button" class="btn btn-dark">
          <a class="formlink" href="/form">Add user details</a>
        </button>
      </form>
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
